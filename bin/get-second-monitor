#! /bin/sh
if [ "$XDG_SESSION_TYPE" == "wayland" ];  then
  seconddisp=$(swaymsg -t get_outputs | grep name | grep -v eDP | sed "s/\"/\n/g"| sed -n '4p')
elif [ "$XDG_SESSION_TYPE" == "tty" ];  then
    seconddisp=$(xrandr | grep connected | grep -v disconnected | grep -v eDP | cut -d ' ' -f 1)
else
    echo "$XDG_SESSION_TYPE is not a known window manager to me. Sorry!"
fi
echo $seconddisp
