#! /bin/sh
for app in $@; do
    if [ $app == "mattermost-desktop" ]; then
        kill "$(swaymsg -t get_tree | grep -n4 xwayland | grep pid | sed 's/[0-9]\{2,\}/&\n/g' | sed -n '2p' | sed 's/[^0-9]\{2,\}//g')" 
    else
        killall $app  >/dev/null 2>&1
    fi
    if [ $1 != "stop" ] 
    then
        $app  > /dev/null 2>&1 &
        if [ $app == "nyxt" ]
        then
            sleep 1
            swaymsg fullscreen
        fi
    fi
done
